    <form method="GET" class="sort" name="listform">
      <div class="displaylist">
        <table width="100%" border="0" cellspacing="0" cellpadding="0">
          <tr>
            <td class="listorder"><a href="exchange.php?category={$category}&display={$pager.display}&brand={$brand_id}&integral_min={$integral_min}&integral_max={$integral_max}&filter_attr={$filter_attr}&page={$pager.page}&sort=goods_id&order=<!-- {if $pager.sort == 'goods_id' && $pager.order == 'DESC'} -->ASC<!-- {else} -->DESC<!-- {/if} -->#goods_list" class="display_a display_<!-- {if $pager.sort == 'goods_id'} -->{$pager.order} bg_c<!-- {else} -->default<!-- {/if} -->"><span>上架时间</span></a> <a href="exchange.php?category={$category}&display={$pager.display}&brand={$brand_id}&integral_min={$integral_min}&integral_max={$integral_max}&filter_attr={$filter_attr}&page={$pager.page}&sort=exchange_integral&order=<!-- {if $pager.sort == 'exchange_integral' && $pager.order == 'ASC'} -->DESC<!-- {else} -->ASC<!-- {/if} -->#goods_list" class="display_a display_<!-- {if $pager.sort == 'exchange_integral'} -->{$pager.order} bg_c<!-- {else} -->default<!-- {/if} -->"><span>积分</span></a> <a href="exchange.php?category={$category}&display={$pager.display}&brand={$brand_id}&integral_min={$integral_min}&integral_max={$integral_max}&filter_attr={$filter_attr}&page={$pager.page}&sort=last_update&order=<!-- {if $pager.sort == 'last_update' && $pager.order == 'DESC'} -->ASC<!-- {else} -->DESC<!-- {/if} -->#goods_list" class="display_a display_<!-- {if $pager.sort == 'last_update'} -->{$pager.order} bg_c<!-- {else} -->default<!-- {/if} -->"><span>更新时间</span></a>
              <input type="hidden" name="category" value="{$category}" />
              <input type="hidden" name="display" value="{$pager.display}" id="display" />
              <input type="hidden" name="integral_min" value="{$integral_min}" />
              <input type="hidden" name="integral_max" value="{$integral_max}" />
              <input type="hidden" name="page" value="{$pager.page}" /></td>
            <td class="td_r">(共有<b>{$pager.record_count}</b>个商品)  共<b>{$pager.page_count}</b>页<a name='goods_list'></a></td>
          </tr>
        </table>
      </div>
    </form>
    <div class="clear10"></div>
    <!-- {if $pager.display == 'list'} -->
    <div class="goodsList">
      <!--{foreach name=goods_list from=$goods_list item=goods}-->
      <ul class="clearfix bgcolor"
        
        
        
        
      <!--{if $smarty.foreach.goods_list.index mod 2 eq 0}-->
      id=""
      <!--{else}-->
      id="bgcolor"
      <!--{/if}-->
      >
      <li class="thumb"><a href="{$goods.url}"><img src="{$goods.goods_thumb}" alt="{$goods.goods_name}" /></a></li>
      <li class="goodsName"> <a href="{$goods.url}" class="f6">
        <!-- {if $goods.goods_style_name} -->
        {$goods.goods_style_name}<br />
