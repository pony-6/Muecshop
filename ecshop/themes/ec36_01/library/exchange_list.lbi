        {$lang.goods_brief}{$goods.goods_brief}<br />
        <!-- {/if} -->
      </li>
      <li> {$lang.exchange_integral}<font class="shop_s">{$goods.exchange_integral}</font> </li>
      </ul>
      <!--{/foreach}-->
